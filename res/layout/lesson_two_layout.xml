<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="165dp"
            android:id="@+id/imageView" android:layout_alignParentLeft="true"
            android:src="@drawable/list2" android:scaleType="centerCrop"
            android:layout_alignParentBottom="true" android:layout_alignParentTop="true"
            android:layout_marginTop="119dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_name_editText" android:layout_alignParentRight="true" android:layout_alignParentLeft="true"
            android:hint="Name"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept Name"
            android:id="@+id/accept_name_button" android:layout_alignLeft="@+id/imageView"
            android:layout_below="@+id/enter_name_editText" android:layout_alignRight="@+id/imageView"/>
</RelativeLayout>